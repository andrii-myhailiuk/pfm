<%= form_with(model: operation) do |form| %>
  <% if operation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

      <ul>
        <% operation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t(:amount), style: "display: block" %>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label t(:description), style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label t(:otype), style: "display: block" %>
    <%= form.select :otype, Operation.otypes.map {|k, v| [t(k.to_sym), k]} %>
  </div> 

  <div>
    <%= form.label t(:odate), style: "display: block" %>
    <%= form.datetime_field :odate %>
  </div>

  <div>
    <%= form.label t(:category), style: "display: block" %>
    <%= form.select :category_id, @category_options %>
  </div>

  <div>
    <%= form.submit t(:create) %>
  </div>
<% end %>
